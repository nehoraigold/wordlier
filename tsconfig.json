{
	"compilerOptions": {
		"target": "es6",
		"lib": [ "es2020" ],
		"module": "commonjs",
		"noImplicitAny": false,
		"outDir": "dist",
		"rootDir": ".",
		"moduleResolution": "node",
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"sourceMap": true,
		"experimentalDecorators": true
	},
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}